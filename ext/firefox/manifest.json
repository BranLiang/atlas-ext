{
  "manifest_version": 3,
  "name": "IssueExplorer",
  "version": "0.1.1",

  "description": "Tailored for readers of Ruanyifeng's 科技爱好者周刊, it enhances each issue by providing relevant contents.",

  "icons": {
    "48": "icons/logo@48.png",
    "512": "icons/logo@512.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.ruanyifeng.com/blog/*/*/weekly-issue-*.html"],
      "js": ["source.js"]
    }
  ],
  "permissions": ["webRequest"]
}
